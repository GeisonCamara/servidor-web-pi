extends layout

block content
    nav.navbar.navbar-inverse
      .container-fluid
        .navbar-header
          a.navbar-brand(href='#') Campainha
        ul.nav.navbar-nav
          li
            a(href='/') Início
          li.dropdown.active
            a.dropdown-toggle(data-toggle='dropdown')
              | Usuário
              span.caret
            ul.dropdown-menu
              li
                a(href='/user/cadastrar') Cadastrar
              li
                a(href='/user/alterar') Alterar
              li
                a(href='/user/search') Buscar
          li
            a(href='/historic') Histórico
    section
      .container-fluid
        .row
          .col-sm-1
          .col-sm-6
            .panel.panel-default
              .panel-heading
                h3 Cadastrar usuário
              .panel-body
                .form-group
                  label(for='name') Name:
                  input#name.form-control(type='text')
                  br
                  label(for='pass') Senha:
                  input#pass.form-control(type='pass')
                  br
                  label(for='nfc') NFC:
                  input#nfc.form-control(type='text')
              .panel-footer
                button.btn.btn-success Cadastrar
                button.btn.btn-danger Cancelar
          .col-sm-4
            .switch
              input#button(type='checkbox')
              label
                i.icon-off
          .col-sm-1
            
      